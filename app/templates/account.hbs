<h1>Account</h1>

<table class="table">
  <thead>
    <tr>
      <th>You</th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class='col-xs-3'>
    <div class="media">
      <a class="pull-left" href="http://www.gravatar.com">
        <img class="media-object" src="images/jason.png">
      </a>
      <div class="media-body">
        You can update your image at <a href="http://www.gravatar.com">gravatar.com</a>.
      </div>
    </div>
  </div>
  <div class='col-xs-6'>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="user_name" class="col-xs-3 control-label">Name</label>
        <div class="col-xs-9">{{click-to-edit field=name action="acceptChanges"}}</div>
      </div>
      <div class="form-group">
        <label class="col-xs-3 control-label">Email</label>
        <div class="col-xs-9">{{click-to-edit field=email action="acceptChanges"}}</div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-xs-9">
          <div class="checkbox">
            <label>
              {{view Ember.Checkbox checkedBinding="emailMe"}} Email me about product updates.
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-xs-9">
          <button class='btn btn-default btn-sm'>Update password</button>
        </div>
      </div>
    </form>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Your company</th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class='col-xs-6 col-sm-offset-3'>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="user_company_name" class="col-xs-3 control-label">Name</label>
        <div class="col-xs-9">{{click-to-edit field=company.name action="acceptChanges"}}</div>
      </div>
      <div class="form-group">
        <label for="user_company_slug" class="col-xs-3 control-label">Subdomain</label>
        {{#if isEditingSubdomain}}
          <div class="col-xs-5">
            {{focused-text-field valueBinding="company.slug" class="form-control" action="acceptChanges"}}
          </div>
          <div class="form-control-static pull-left">.activecell.com</div>
        {{else}}
          <div class="col-xs-9">
            <div class="form-control-static editable pull-left" {{action "editSubdomain"}}>{{company.slug}}</div>
            <div class="form-control-static pull-left">.activecell.com</div>
          </div>
        {{/if}}
      </div>
    </form>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Billing</th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class='col-xs-6 col-sm-offset-3'>
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <div class="col-sm-offset-3 col-xs-9">
          <p class="help-block">
            <small>This account is billed to:
              <strong>{{company.creditType}} {{company.lastFour}}</strong></small>
          </p>
          <button class='btn btn-default btn-sm'>Update credit card</button>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-9 col-sm-offset-3">
          <a href="#" class='text-danger'>Close this accountâ€¦</a>
        </div>
      </div>
    </form>
  </div>
</div>