<div class="container">
  <div class="row">
    <div class = "col-lg-8">
      <h2><i class="fa fa-tasks"></i> Your task boards</h2>
      <p class="lead">Task boards help you manage sets of tasks</p>
      <table class="table">
        <thead>
          <tr>
            <th>Board</th>
            <th>Recipe</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each}}
            {{board-row board=controller}}
          {{/each}}
        </tbody>
      </table>
      <a data-toggle="modal" href="#addBoard" class='btn btn-primary'>
        <i class="fa fa-plus"></i> Add a new board
      </a>
    </div>
  </div>
</div><!-- end .container -->