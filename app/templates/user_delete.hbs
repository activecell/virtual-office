{{#view App.ModalView}}
  <div class="modal-header">
    <button type="button" class="close" {{action close target="view"}}>&times;</button>
    <h4 class="modal-title">Remove {{name}}</h4>
  </div>
  <div class="modal-body">
    <p>Are you sure that you would like to delete {{name}}?</p>
    <p>This person will be removed from all resources.</p>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action close target="view"}}>Cancel</button>
    <button type="button" class="btn btn-danger" {{action close target="view"}}>Remove</button>
  </div>
{{/view}}