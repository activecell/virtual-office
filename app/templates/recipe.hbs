{{#linkTo 'recipes'}}
  <i class="fa fa-arrow-circle-o-left"></i>
  Back to recipe list
{{/linkTo}}

<br />
<h2>{{name}}</h2>

<table class="table">
  <thead>
    <tr>
      <th><i class="fa fa-cogs"></i> Recipe settings</th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class='col-xs-8 col-sm-offset-4'>
    <form role="form">
      <div class="form-group">
        <label for="frequencySelector">How often will this recipe be used?</label>
        <select id="frequencySelector" class="form-control">
          <option>Daily</option>
          <option>Weekly</option>
          <option>Monthly</option>
          <option>Quarterly</option>
          <option>Annually</option>
          <option>As needed</option>
        </select>
      </div>
      <div class="form-group">
        <label for="onText">One what day of the period?</label>
        <input type="text" class="form-control" id="onText" value='1'>
      </div>
    </form>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th><i class="fa fa-tasks"></i> Tasks to queue each time</th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class='col-xs-8 col-sm-offset-4'>
    <div class="list-group">
      {{#each tasks}}
        <a data-toggle="modal" href="#itemDetail" class="list-group-item">
          <span class="badge">{{minutes}}</span>
          <img {{bindAttr src="avatarSrc"}} height="20" width="20">
          {{name}}
        </a>
      {{/each}}
    </div>
    <button class='btn btn-block btn-primary'>
      <i class="fa fa-plus"></i> Add a task
    </button>
  </div>
</div>