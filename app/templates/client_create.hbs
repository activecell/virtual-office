{{#view App.ModalView}}
  <div class="modal-header">
    <button type="button" class="close" {{action close target="view"}}>&times;</button>
    <h4 class="modal-title">New client</h4>
  </div>
  <div class="modal-body">
    <p>Use this form to add a client to your client listâ€¦</p>
    <form role="form">
      <div class="form-group">
        <label for="exampleInputClientName">Client name</label>
        <input type="text" class="form-control" id="exampleInputClientName" placeholder="Enter client name">
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action close target="view"}}>Close</button>
    <button type="button" class="btn btn-primary" {{action close target="view"}}>Save changes</button>
  </div>
{{/view}}