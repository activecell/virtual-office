{{#if parentUsers}}
<h2>{{name}} team access</h2>
{{/if}}

<p class="lead">Add members of the team to ensure they have access to all critical resources!</p>

<table class="table">
  <thead>
    <tr>
      <th>Team member</th>
      <th>Role</th>
      <th class='text-right'>Last logged in</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{name}}</td>
        <td>{{role}}</td>
        <td class='text-right'>{{lastLoggedInString}}</td>
        <td class='text-right'>
          <button {{action openModal 'user_delete' this}} class='btn btn-danger btn-xs'>
            <i class="fa fa-times-circle-o"></i>
            Remove
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<a {{action openModal 'user_create'}} class='btn btn-primary'>
  <i class="fa fa-plus"></i>
  Invite a new team member
</a>

{{#if parentUsers}}

<br />

