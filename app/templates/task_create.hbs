{{#view App.ModalView}}
  <div class="modal-header">
    <button type="button" class="close" {{action close target="view"}}>&times;</button>
    <h4 class="modal-title">New task</h4>
  </div>
  <div class="modal-body">
    <p>Use this form to create a new taskâ€¦</p>
    <form role="form">
      <div class="form-group">
        <label for="taskName">Task name</label>
        <input type="text" class="form-control" id="taskName" placeholder="Enter task name">
      </div>
      <div class="form-group">
        <label for="selectAssignee">Assignee</label>
        <select id="selectAssignee" class="chosen-select">
          <option>Adam Neary</option>
          <option>Sinisa</option>
          <option>Aleksey</option>
          <option>Daniel</option>
        </select>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-select" {{action close target="view"}}>Close</button>
    <button type="button" class="btn btn-primary" {{action close target="view"}}>Save changes</button>
  </div>
{{/view}}