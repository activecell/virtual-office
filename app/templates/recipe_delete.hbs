{{#view App.ModalView}}
  <div class="modal-header">
    <button type="button" class="close" {{action close target="view"}}>&times;</button>
    <h4 class="modal-title">Delete {{name}}</h4>
  </div>
  <div class="modal-body">
    <p>You are about to delete this recipe: {{name}}?</p>
    <p>This cannot be undone. Are you sure?</p>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action close target="view"}}>Cancel</button>
    <button type="button" class="btn btn-danger" {{action close target="view"}}>Delete</button>
  </div>
{{/view}}